@model List<BlogModel>
@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
    ViewData["Title"] = "Blog";
    int count = 0;
}

<h4>Blog</h4>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Action</th>
            <th scope="col">#</th>
            <th scope="col">Blog Title</th>
            <th scope="col">Blog Content</th>
            <th scope="col">Blog Author</th>
        </tr>
    </thead>
    <tbody>
        @foreach (BlogModel item in Model)
            {
                <tr>
                    <th>
                        <a href="/Blog/Delete/@(item.BlogId)" class="btn btn-danger">Danger</a>
                        <a href="/Blog/Edit/@(item.BlogId)" class="btn btn-warning">Warning</a>
                    </th>
                    <th scope="row">@(++count)</th>
                    <td>@item.BlogTitle</td>
                    <td>@item.BlogContent</td>
                    <td>@item.BlogAuthor</td>
                </tr>
            }
    </tbody>
</table>